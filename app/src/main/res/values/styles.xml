<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
        <item name="android:windowBackground">@color/colorTextWhite</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="MovieDetailTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_left</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MovieDetailSubtitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:paddingLeft">@dimen/text_padding_16dp</item>
        <item name="android:paddingRight">@dimen/text_padding_16dp</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="MovieDetailContainerSubTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:paddingBottom">@dimen/text_padding_8dp</item>
        <item name="android:paddingTop">@dimen/text_padding_12dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>


    <style name="MovieDetailContainerTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:padding">@dimen/text_padding_8dp</item>
    </style>

    <style name="MovieDetailContent" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:paddingTop">@dimen/text_padding_8dp</item>
        <item name="android:paddingBottom">@dimen/text_padding_8dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="MovieDetailContainer" parent="android:Widget">
        <item name="android:layout_marginTop">@dimen/detail_card_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/detail_card_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/detail_card_view_margin_right</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="ViewText">
        <item name="android:textColor">@color/titleTextColor</item>
    </style>
    <style name="DrawerNameText" parent="ViewText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">38dip</item>
        <item name="android:maxHeight">38dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
        <item name="colorControlNormal">@color/cardview_dark_background</item>
        <item name="colorControlActivated">@color/colorSecondaryText</item>
    </style>

</resources>
